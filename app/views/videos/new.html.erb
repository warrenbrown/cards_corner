<div class="container">
  <h1>New video</h1>

  <%= simple_form_for @video do |f| %>
    <div class="form-group">
      <%= f.input :link, class: 'form-control', required: true %>
      <span class="help-block">A link to the video on YouTube.</span>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
