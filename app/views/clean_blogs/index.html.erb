<title>Clean Blog</title>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10">
          <% @articles.each do |article| %>
            <% if article.published? %>

                  <div class="post-preview">
                      <div class="media">
                          <%= image_tag article.image.url(:thumb), class: 'media-object pull-left'%>
                        <h2 class="post-title">
                                <%= link_to article.title, article_path(article) %>
                        </h2>
                        <h3 class="post-subtitle">
                            <%= article.sub_title %>
                        </h3>
                        <p class="post-meta">Posted by ShadowMunkey</a> on <%= article.created_at.strftime("%A, %d %b %Y %l:%M %p") %></p>
                      </div>
                  </div>
              <hr>
              <% end %>
          <% end %>

            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="#">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
        <div class="col-md-4">



            <!-- Blog Categories Well -->
            <div class="well">
                <h4>Blog Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">

                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="list-unstyled">

                        </ul>
                    </div>
                </div>
                <!-- /.row -->
            </div>

            <!-- Side Widget Well -->
            <div class="well">
              <a class="twitter-timeline" data-width="400" data-height="300" href="https://twitter.com/VSNgaming">Tweets by VSNgaming</a>
              <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>

        </div>
    </div>
</div>

<br>
