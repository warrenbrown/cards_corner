<div class="container">
  <%= simple_form_for(@article), remote: true do |f| %>
    <%= f.input :title %>
    <%= f.input :sub_title %>
    <%= f.input :image, as: :file %>
    <%= f.input :soundcloud_url %>
    <%= f.input :body %>
    <%= f.input :published %>
    <%= f.button :submit %>
  <% end %>
</div>
