<h1>Articles</h1>

<table class="table table-striped">

    <tr>
      <th>Title</th>
      <th>pubished</th>
      <th>Actions</th>
    </tr>
      <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.published? %></td>
      <td>
        <%= link_to 'Delete Article', article_path(article), class: 'btn btn-default', method: :delete, data: { confirm: 'Are you sure you want to delete this article?'} %>
        <%= link_to 'Edit Article', edit_article_path(article), class: 'btn btn-default' %>
      </td>
    </tr>
    <% end %>
</table>
